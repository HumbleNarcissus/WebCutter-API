{
    "openapi": "3.0.0",
    "info": {
      "version": "0.0.1",
      "title": "Cutter Service",
      "description": "Swagger spec for documenting the cutter service"
    },
    "servers": [
      {
        "url": "http://localhost"
      }
    ],
    "paths": {
      "/register": {
        "post": {
          "summary": "Register new user",
          "requestBody": {
            "description": "User to add",
            "required": "true",
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "username",
                    "email",
                    "password"
                  ],
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "User added"
            }
          }
        }
      },
      "/login": {
        "post": {
          "summary": "Logs a user in",
          "requestBody": {
            "description": "User to log in",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "username",
                    "password"
                  ],
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successfully logged in"
            }
          }
        }
      },
      "/{shortcut}": {
        "get": {
          "summary": "Redirect user to other site.",
          "responses": {
            "302": {
              "descroption": "Redirected successfully."
            }
          },
          "parameters": [
            {
              "required": true,
              "in": "path",
              "description": "Site's shortcut code.",
              "name": "shortcut",
              "schema": {
                "type": "string"
              }
            }
          ]
        }
      },
      "/sites": {
        "get": {
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "summary": "GET all sites",
          "responses": {
            "200": {
              "description": "All sites returned."
            }
          }
        },
        "post": {
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "summary": "POST new site",
          "requestBody": {
            "description": "New site to add",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "site"
                  ],
                  "properties": {
                    "site": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Created new site."
            }
          }
        }
      },
      "/sites/{site_name}": {
        "get": {
          "summary": "GET single site",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Single site returned."
            }
          },
          "parameters": [
            {
              "required": true,
              "in": "path",
              "description": "Site name",
              "name": "site_name",
              "schema": {
                "type": "string"
              }
            }
          ]
        },
        "delete": {
          "summary": "DELETE single site",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Single site deleted."
            }
          },
          "parameters": [
            {
              "required": true,
              "in": "path",
              "description": "Site name",
              "name": "site_name",
              "schema": {
                "type": "string"
              }
            }
          ]
        },
        "put": {
          "summary": "PUT single site",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Single site edited."
            }
          },
          "parameters": [
            {
              "required": true,
              "in": "path",
              "description": "Site name",
              "name": "site_name",
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "description": "New site to add or edit",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "site"
                  ],
                  "properties": {
                    "site": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer"
        }
      },
      "schemas": {
      }
    }
  }